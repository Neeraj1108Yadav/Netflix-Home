<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="HeadStyleTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MovieInfoTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>
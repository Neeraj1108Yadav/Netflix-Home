<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvHeading"
        style="@style/HeadStyleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Watching for Nilesh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMovieImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/normal_margin"
                android:background="@drawable/b1"
                android:contentDescription="@null"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ivMovieImage"
                app:layout_constraintStart_toStartOf="@id/ivMovieImage"
                app:layout_constraintEnd_toEndOf="@id/ivMovieImage"
                app:layout_constraintBottom_toBottomOf="@id/ivMovieImage"
                android:background="@color/movie_transparent"
                android:contentDescription="@null"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ivMovieImage"
                app:layout_constraintStart_toStartOf="@id/ivMovieImage"
                app:layout_constraintEnd_toEndOf="@id/ivMovieImage"
                app:layout_constraintBottom_toBottomOf="@id/ivMovieImage"
                android:background="@drawable/ic_play"
                android:contentDescription="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMovieImageTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/normal_margin"
                android:background="@drawable/b2"
                android:contentDescription="@null"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ivMovieImageTwo"
                app:layout_constraintStart_toStartOf="@id/ivMovieImageTwo"
                app:layout_constraintEnd_toEndOf="@id/ivMovieImageTwo"
                app:layout_constraintBottom_toBottomOf="@id/ivMovieImageTwo"
                android:background="@color/movie_transparent"
                android:contentDescription="@null"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ivMovieImageTwo"
                app:layout_constraintStart_toStartOf="@id/ivMovieImageTwo"
                app:layout_constraintEnd_toEndOf="@id/ivMovieImageTwo"
                app:layout_constraintBottom_toBottomOf="@id/ivMovieImageTwo"
                android:background="@drawable/ic_play"
                android:contentDescription="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>